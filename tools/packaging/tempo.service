[Unit]
Description=Tempo service
After=network.target

[Service]
Type=simple
User=tempo
ExecStart=/usr/bin/tempo -config.file /etc/tempo/config.yml
# Give a reasonable amount of time for the server to start up/shut down
TimeoutSec = 120
Restart = on-failure
RestartSec = 2

[Install]
WantedBy=multi-user.target