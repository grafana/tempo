{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:best-practices',
    ':semanticCommits',
    'helpers:pinGitHubActionDigestsToSemver',
  ],
  schedule: [
    'at any time',
  ],
  prConcurrentLimit: 15,
  branchConcurrentLimit: 15,
  ignoreDeps: [],
  separateMajorMinor: true,
  automergeStrategy: 'squash',
  automergeType: 'pr',
  automerge: true,
  platformAutomerge: true,
  addLabels: [
    'dependencies',
    'renovate',
    '{{manager}}',
    '{{updateType}}'
  ],
  minimumReleaseAge: '7 days',
  postUpdateOptions: [
    'gomodUpdateImportPaths',
    'gomodTidy',
    'gomodVendor',
  ],
  packageRules: [
    {
      description: 'Group OpenTelemetry OTEL updates',
      matchManagers: [
        'gomod',
      ],
      groupName: 'opentelemetry-otel',
      matchPackageNames: [
        '/^go\\.opentelemetry\\.io/otel/',
      ],
    },
    {
      description: 'Group OpenTelemetry Contrib updates',
      matchManagers: [
        'gomod',
      ],
      groupName: 'opentelemetry-contrib',
      matchPackageNames: [
        '/^go\\.opentelemetry\\.io/contrib/',
        '/^github\\.com/open-telemetry/opentelemetry-collector-contrib/',
      ],
    },
    {
      description: 'Group OpenTelemetry Collector updates',
      matchManagers: [
        'gomod',
      ],
      groupName: 'opentelemetry-collector',
      matchPackageNames: [
        '/^go\\.opentelemetry\\.io/collector/',
      ],
    },
    {
      description: 'Group k8s.io updates',
      matchManagers: [
        'gomod',
      ],
      groupName: 'k8s.io',
      matchPackageNames: [
        '/^k8s\\.io//',
      ],
    },
    {
      description: 'Group Docker updates',
      matchManagers: [
        'dockerfile',
      ],
      groupName: 'docker',
    },
  ],
}
